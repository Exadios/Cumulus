# Version is determined from the header file target.h
VERSION = `cat cumulus/target.h | grep CU_VERSION | cut -d '"' -f 2`

# current Qt version
QT_VERSION=4.5.3

# installation directory of Qt libraries
QT_LIBDIR=/opt/qt$(QT_VERSION)/lib

DATE=`date +'%a, %d %b %Y %H:%M:%S %z'`

# adapt install path to your needs if necessary
INSTALL_ROOT = /opt/cumulus

# adapt call pathes to your needs if necessary
QMAKE    = qmake
LRELEASE = lrelease

all:	qmake resetdate
	cd cumulus; make
	cd gpsClient; make
	cd nmeaSimulator; make

.PHONY : clean
clean:
	@if [ -f cumulus/Makefile ]; \
	then \
		cd cumulus; make distclean; rm -f Makefile; \
	fi
	@if [ -f gpsClient/Makefile ]; \
	then \
		cd gpsClient; make distclean; rm -f Makefile; \
	fi
	@if [ -f nmeaSimulator/Makefile ]; \
	then \
		cd nmeaSimulator; make distclean; rm -f Makefile; \
	fi
	@echo "Build area cleaned"

.PHONY : check_dir
check_dir:
	@if [ ! -w  $(INSTALL_ROOT) ]; \
	then \
		echo "Install Directory '$(INSTALL_ROOT)' not writeable - Are you root?"; \
		exit 99; \
	fi

.PHONY : install
install: check_dir deinstall install_lang
	@echo '===== Installing Cumulus $(VERSION) under $(INSTALL_ROOT) ====='
	strip cumulus/cumulus
	strip gpsClient/gpsClient
	strip nmeaSimulator/nmeaSimu
	install -d $(INSTALL_ROOT)/bin
	install -d $(INSTALL_ROOT)/etc
	install -d $(INSTALL_ROOT)/help/de
	install -d $(INSTALL_ROOT)/help/en
	install -d $(INSTALL_ROOT)/icons
	install -d $(INSTALL_ROOT)/icons/small
	install -d $(INSTALL_ROOT)/icons/windarrows
	install -d $(INSTALL_ROOT)/locale
	install -d $(INSTALL_ROOT)/sounds
	install -d $(INSTALL_ROOT)/maps/airfields
	install -d $(INSTALL_ROOT)/maps/airspaces
	install -d $(INSTALL_ROOT)/maps/landscape
	install --mode=755 cumulus/cumulus $(INSTALL_ROOT)/bin
	install --mode=755 gpsClient/gpsClient $(INSTALL_ROOT)/bin
	install --mode=755 nmeaSimulator/nmeaSimu $(INSTALL_ROOT)/bin
	install --mode=644 etc/glider.pol $(INSTALL_ROOT)/etc
	install --mode=644 icons/*.xpm $(INSTALL_ROOT)/icons
	install --mode=644 icons/*.png $(INSTALL_ROOT)/icons
	install --mode=644 icons/small/* $(INSTALL_ROOT)/icons/small
	install --mode=644 icons/windarrows/* $(INSTALL_ROOT)/icons/windarrows
	install --mode=644 help/de/*.html icons/cumulus.png $(INSTALL_ROOT)/help/de
	install --mode=644 help/en/*.html icons/cumulus.png $(INSTALL_ROOT)/help/en
	install --mode=644 sounds/*.wav $(INSTALL_ROOT)/sounds

# call dpkg target to build a debian Maemo package
.PHONY : dpkg dpkg_make
dpkg:
	@echo "===== Building OS2008 Maemo package for Cumulus $(VERSION) ====="
	@$(MAKE) -f Makefile.Maemo VERSION=$(VERSION) dpkg_make

# This target will build the debian packge. It is called via another makefile
# due to the VERSION macro. The special letters apostroph and quotation makrk
# cause problems in ohter shell commands, if they not expanded before.
dpkg_make:
	rm -fr dpkg/cumulus-$(VERSION)
	mkdir -p dpkg/cumulus-$(VERSION)
	cd dpkg/cumulus-$(VERSION); \
	echo '\n' | dh_make -c GPL -e axel@kflog.org -s -n
	cp dpkg/control/makefile dpkg/cumulus-$(VERSION)
	sed -e "s/__DATE__/$(DATE)/g" dpkg/control/copyright > dpkg/cumulus-$(VERSION)/debian/copyright
	cp dpkg/control/control dpkg/cumulus-$(VERSION)/debian/
	cp dpkg/control/rules dpkg/cumulus-$(VERSION)/debian/
	cp dpkg/control/postinst dpkg/cumulus-$(VERSION)/debian/
	cp dpkg/control/prerm dpkg/cumulus-$(VERSION)/debian/
	cp dpkg/control/postrm dpkg/cumulus-$(VERSION)/debian/
	sed -e "s/__DATE__/$(DATE)/g" dpkg/control/README > dpkg/cumulus-$(VERSION)/debian/README
	cp dpkg/cumulus-$(VERSION)/debian/README dpkg/cumulus-$(VERSION)/debian/README.Debian
	sed -e "s/__VERSION__/$(VERSION)/g" -e "s/__DATE__/$(DATE)/g" dpkg/control/changelog > dpkg/cumulus-$(VERSION)/debian/changelog
	cd dpkg/cumulus-$(VERSION); \
	dpkg-buildpackage -rfakeroot
	rm -f dpkg/cumulus_$(VERSION).dsc dpkg/cumulus_$(VERSION).tar.gz

# copies all files of cumulus into the debian package area
.PHONY : dpkg_install
dpkg_install:
	@echo '===== Installing Cumulus $(VERSION) under $(DESTDIR)/$(INSTALL_ROOT) ====='
	strip cumulus/cumulus
	strip gpsClient/gpsClient
	strip nmeaSimulator/nmeaSimu
	install -d $(DESTDIR)/$(INSTALL_ROOT)/bin
	install -d $(DESTDIR)/$(INSTALL_ROOT)/etc
	install -d $(DESTDIR)/$(INSTALL_ROOT)/help/de
	install -d $(DESTDIR)/$(INSTALL_ROOT)/help/en
	install -d $(DESTDIR)/$(INSTALL_ROOT)/icons
	install -d $(DESTDIR)/$(INSTALL_ROOT)/icons/small
	install -d $(DESTDIR)/$(INSTALL_ROOT)/icons/windarrows
	install -d $(DESTDIR)/$(INSTALL_ROOT)/lib
	install -d $(DESTDIR)/$(INSTALL_ROOT)/locale
	install -d $(DESTDIR)/$(INSTALL_ROOT)/sounds
	install -d $(DESTDIR)/$(INSTALL_ROOT)/maps/airfields
	install -d $(DESTDIR)/$(INSTALL_ROOT)/maps/airspaces
	install -d $(DESTDIR)/$(INSTALL_ROOT)/maps/landscape
	install -d $(DESTDIR)/usr/share/applications/hildon
	install -d $(DESTDIR)/usr/share/dbus-1/services
	install -d $(DESTDIR)/usr/share/icons/hicolor/26x26/apps
	install --mode=755 dpkg/maemo/start_cumulus $(DESTDIR)/$(INSTALL_ROOT)/bin
	install --mode=755 dpkg/maemo/start_simu $(DESTDIR)/$(INSTALL_ROOT)/bin
	install --mode=755 cumulus/cumulus $(DESTDIR)/$(INSTALL_ROOT)/bin
	install --mode=755 gpsClient/gpsClient $(DESTDIR)/$(INSTALL_ROOT)/bin
	install --mode=755 nmeaSimulator/nmeaSimu $(DESTDIR)/$(INSTALL_ROOT)/bin
	install --mode=755 dpkg/maemo/aplay $(DESTDIR)/$(INSTALL_ROOT)/bin
	install --mode=644 etc/glider.pol $(DESTDIR)/$(INSTALL_ROOT)/etc
	install --mode=644 icons/*.xpm $(DESTDIR)/$(INSTALL_ROOT)/icons
	install --mode=644 icons/*.png $(DESTDIR)/$(INSTALL_ROOT)/icons
	install --mode=644 icons/small/* $(DESTDIR)/$(INSTALL_ROOT)/icons/small
	install --mode=644 icons/windarrows/* $(DESTDIR)/$(INSTALL_ROOT)/icons/windarrows
	install --mode=644 icons/cumulus-desktop.png $(DESTDIR)/usr/share/icons/hicolor/26x26/apps/cumulus.png
	install --mode=644 help/de/* icons/cumulus.png $(DESTDIR)/$(INSTALL_ROOT)/help/de
	install --mode=644 help/en/* icons/cumulus.png $(DESTDIR)/$(INSTALL_ROOT)/help/en
	install --mode=644 sounds/*.wav $(DESTDIR)/$(INSTALL_ROOT)/sounds
	install --mode=644 dpkg/maemo/cumulus.desktop $(DESTDIR)/usr/share/applications/hildon/cumulus.desktop
	install --mode=644 dpkg/maemo/cumulus.service $(DESTDIR)/usr/share/dbus-1/services/cumulus.service
	install --mode=755 $(QT_LIBDIR)/libQtCore.so.$(QT_VERSION) $(DESTDIR)/$(INSTALL_ROOT)/lib
	install --mode=755 $(QT_LIBDIR)/libQtGui.so.$(QT_VERSION) $(DESTDIR)/$(INSTALL_ROOT)/lib
	install --mode=755 $(QT_LIBDIR)/libQtNetwork.so.$(QT_VERSION) $(DESTDIR)/$(INSTALL_ROOT)/lib

.PHONY : install_lang
install_lang:
	install -d $(INSTALL_ROOT)/locale/de
	test -f cumulus/cumulus_de.qm  || touch cumulus/cumulus_de.qm
	install --mode=644 cumulus/cumulus_de.qm $(INSTALL_ROOT)/locale/de/cumulus_de.qm

.PHONY : deinstall
deinstall:
	@if [ -d  $(INSTALL_ROOT)/maps ]; \
	then \
	        cd $(INSTALL_ROOT); rm -rf bin etc help icons locale sounds; \
        else \
                rm -rf $(INSTALL_ROOT)/*; \
        fi

.PHONY : langpacks
langpacks: langpack_de
	@echo 'All language packs created'

.PHONY : langpack_de
langpack_de:
	cd cumulus; $(LRELEASE) -verbose -nounfinished cumulus_de.ts -qm cumulus_de_DE.qm

.PHONY : release
release: clean all langpacks

# copies change log and debian package to web page
.PHONY : copy_web
copy_web:
	scp -C ChangeLog web31_axel@kflog.org:/srv/www/web31/web/fileadmin/user_upload/cumulus_snapshots/ChangeLog_$(VERSION)_`date '+%F'`
	scp -C dpkg/cumulus_$(VERSION)_armel.changes \
	       web31_axel@kflog.org:/srv/www/web31/web/fileadmin/user_upload/cumulus_snapshots/
	scp -C dpkg/cumulus_$(VERSION)_armel.deb \
	       web31_axel@kflog.org:/srv/www/web31/web/fileadmin/user_upload/cumulus_snapshots/cumulus_$(VERSION)_armel_n8x0.deb

qmake: cumulus/Makefile gpsClient/Makefile nmeaSimulator/Makefile

.PHONY : resetdate
resetdate:
	rm -rf cumulus/mainwindow.o

cumulus/Makefile: cumulus/cumulusMaemo4.pro
	cd cumulus; $(QMAKE) cumulusMaemo4.pro -o Makefile

gpsClient/Makefile: gpsClient/gpsClientMaemo.pro
	cd gpsClient; $(QMAKE) gpsClientMaemo.pro -o Makefile

nmeaSimulator/Makefile: nmeaSimulator/simuX11.pro
	cd nmeaSimulator; $(QMAKE) simuX11.pro -o Makefile
